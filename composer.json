{
    "name": "jeyroik/i-have-repository-mongo",
    "description": "MognoDB driver for the simple repository wrapper `I have repository`",
    "require": {
        "jeyroik/i-have-repository": "0.*",
        "mongodb/mongodb": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "phpstan/phpstan": "0.*"
    },
    "autoload": {
        "psr-4": {
            "jeyroik\\": "src/",
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox tests",
        "stan": "vendor/bin/phpstan analyse -l 5 src"
    }
}